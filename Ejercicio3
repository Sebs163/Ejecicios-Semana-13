Proceso Ejercicio_3
	
	Definir num1, num2, num3, resul Como Real;
	
	Escribir "Ingresar primer número: ";
	Leer num1;
	Escribir "Ingresar segundo número: ";
	Leer num2;
	Escribir "Ingresar tercer número: ";
	Leer num3;
	
	si (num1=num2) Entonces
		si (num1=num3 y num2=num3) Entonces
			resul<-num1+num2*num3
			Mostrar "El resultado es: ",resul
		FinSi
	FinSi
	si (num1<num2) Entonces
		si (num1<num3) Entonces
			Mostrar "Primer número es menor";
		FinSi
	SiNo
		si (num2<num1 y num2<num3) Entonces
			Mostrar "El segundo número es menor";
		FinSi
	FinSi
	si (num3<num1 y num3<num2) Entonces
		Mostrar "El tercer número es el menor";
	FinSi
FinProceso
